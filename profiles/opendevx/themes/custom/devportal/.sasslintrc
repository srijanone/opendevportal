{
  files:{
    include: ['scss/**/*.s+(a|c)ss'],
    ignore: ['node_modules/**/*.s+(a|c)ss']
  },
  rules:{
    "extends-before-mixins": 2,
    "extends-before-declarations": 2,
    "placeholder-in-extend": 2,
    "mixins-before-declarations": [
      2,
      {
        "exclude": [
          "breakpoint",
          "mq"
        ]
      }
    ],
    "no-warn": 1,
    "no-debug": 1,
    "no-ids": 2,
    "no-important": 0,
    "hex-notation": [
      2,
      {
        "style": "lowercase"
      }
    ],
    "indentation": [
      2,
      {
        "size": 2
      }
    ],
    "property-sort-order": [
      1,
      {
        "ignore-custom-properties": true
      }
    ],
    "variable-for-property": [
      0,
      {
        "properties": [
          "margin"
        ]
      }
    ],
    "no-vendor-prefixes": [
      0,
      {
        "ignore-non-standard": true
      }
    ],
    "no-qualifying-elements": [
      0,
    ],
    "class-name-format": [
      0,
    ],
    "nesting-depth": [
      1,
      {
        "max-depth": 5
      }
    ]
  }
}
